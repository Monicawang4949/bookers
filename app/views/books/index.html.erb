<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
          <span class="table_body"><%= book.title %></span>
      </td>
      <td>
          <span class="table_body"><%= book.body %></span>
      </td>
      <td>
          <span class="table_body"><%= link_to "Show", book_path(book.id), method: :get %></span>
      </td>
      <td>
          <span class="table_body"><%= link_to "Edit", edit_book_path(book.id), method: :get %></span>
      </td>
      <td>
          <span class="table_body"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ"%></span>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="new_main">
  <h2>New book</h2>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @book, url: '/books',method: :post do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>

    <p>Body</p>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book', class:"submit_button" %>
  <% end %>
</div>